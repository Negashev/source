input {
  elasticsearch {
    hosts => "elasticsearch"
    index => "{{ .Env.SOURCE }}"
    query => "*"
    size => 500
    scroll => "5m"
    docinfo => true
  }
}
output {
  elasticsearch {
    index => "{{ .Env.MERGE }}"
    document_type => "%{[@metadata][_type]}"
    document_id => "%{[@metadata][_id]}"
  }
}
