input {
  file {
    path => "/load/*/*"
    discover_interval => 1
  }
}
filter {
  csv {
    separator => "	"
  }
  grok {
    match => ["path","%{GREEDYDATA}/%{GREEDYDATA:type}/%{GREEDYDATA:filename}"]
  }
  mutate
  {
    remove_field => [ "message", "@version", "path"]
  }
}
output {
  redis {
     host => "{{ default .Env.REDIS_HOST "redis" }}"
     data_type => "list"
     key => "logstash"
     workers => 16
     batch => true
     batch_events => 10000
     batch_timeout => 5
  }
}
