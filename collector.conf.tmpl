input {
  file {
    path => "/load/*/*"
    discover_interval => 2
  }
}
filter {
  grok {
    match => ["path","%{GREEDYDATA}/%{GREEDYDATA:type}/%{GREEDYDATA:filename}"]
  }
  mutate
  {
    remove_field => [ "message", "@version", "path"]
  }
}
output {
  redis {
    host => "{{ default .Env.REDIS_HOST "redis" }}"
    data_type => "list"
    key => "logstash"
    workers => 16
    batch => true
    congestion_interval => 1
    congestion_threshold => 20000000
    batch_events => 50
    batch_timeout => 5
  }
}
